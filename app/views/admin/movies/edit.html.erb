<%=form_with model: @movie,url: "/admin/movies/#{@movie.id}" do |f|%>
<%= f.label :name  , class: "form-label"%>
<%= f.text_field :name ,value:@movie.name , class: "form-control"%>
<br>
<%= f.label :year  , class: "form-label"%>
<%= f.text_field :year,value:@movie.year , class: "form-control"%>
<br>
<%= f.label :description , class: "form-label"%>
<%= f.text_area :description,value:@movie.description  , class: "form-control"%>
<br>
<%= f.label :image_url , class: "form-label"%>
<%= f.text_field :image_url,value:@movie.image_url  , class: "form-control"%>
<br>
<div class="form-check form-switch">
  <%=f.check_box :is_showing,value:@movie.is_showing , class: "form-check-input"%>
  <%= f.label :is_showing , class: "form-check-label"%>
</div>
<br>
<%= f.submit class: "btn btn-primary"%>
<%end%>
<%=link_to "/movies/#{@movie.id}", method: :delete, data: { confirm: "【確認】該当データを削除してもよろしいですか？" } do%>
<input type="button" value="Delete" class="btn btn-danger" />
<%end%>